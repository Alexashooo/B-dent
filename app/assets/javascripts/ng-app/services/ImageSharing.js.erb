              tram: '<%=asset_path("contact/desktop/tram.svg")%>'
            },
            mob:{

            }
          };


          var checkDeviceWidthAndApply = function(scope, deviceWidth, scopeImages, serverImages){
                if($(window).width() <= deviceWidth){
                  scope.$apply(function(){
                      scope[scopeImages] = ImageSharing[serverImages].mob;
                  });
                } else {
                  scope.$apply(function(){
                      scope[scopeImages] = ImageSharing[serverImages].desk;
                  });
                }
          };


          ImageSharing.toggleDeskMob =function(deviceWidth, scopeImages, serverImages){
               var scope = this;
               var scopeImages = scopeImages;
               $(document).ready(function(){
                   checkDeviceWidthAndApply(scope, deviceWidth, scopeImages, serverImages);
               });

               $(window).on("resize", function(){
                   checkDeviceWidthAndApply(scope, deviceWidth, scopeImages, serverImages);
               });

               scope.$on("$destroy",function (){
                   $(window).off("resize load");
               });
            };






       return ImageSharing;

    }

    angular
      .module('bDent')
      .factory('ImageSharing' , ImageSharing);
})();
